    <script>
        const params = new URLSearchParams(window.location.search);

    // Display values
    document.getElementById('userName').textContent = params.get('userName');
    document.getElementById('userEmail').textContent = params.get('userEmail');
    document.getElementById('userComment').textContent = params.get('userComment');
    </script>
<script src="js/jquery-min.js"></script>
<script src="js/bootstrap.bundle.min.js"></script>    
<script>
// javascript code will only run once the DOM is ready   
$(document).ready(function(){

    var formValues = JSON.parse(localStorage.getItem('regForm'));
    for(var i=0;i<formValues.length;i++){
           // display the name/value pairs on screen    
           alert('Field name is : ' + formValues[i]['name'] + ', Value is: ' + formValues[i]['value']);
        }
});
</script>     
